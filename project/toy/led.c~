#include <msp430.h>
#include "led.h"
#include "switches.h"
#include "libTimer.h"


unsigned char green = 0, red = 0;
unsigned char leds_change = 0;

static char redVal[] = {0, LED_RED}, greenVal[] = {0, LED_GREEN};

void led_init(){
  P1DIR |= LEDS;
  leds_change = 1;
  led_update();
}

void led_update(){

  if(leds_change){
    char ledFlags = redVal[red] | greenVal[green];
    P1OUT &= (0xff^LEDS) ledFlags;
    P1OUT |= ledFlags;
    led_changed = 0; 
  }

}
